<!DOCTYPE html>
<html id="region-content"
    lang="en"
    i18n:domain="plomino.tinymce">
    <head>
        <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
        <title i18n:translate="plominofield_title">Insert a Plomino Field</title>
        <script type="text/javascript" src="++resource++Products.CMFPlomino/js/tinymce.plominofield.js"></script>
        <link tal:replace="structure provider:plone.htmlhead.links" />
        <script tal:replace="structure provider:plone.scripts" />
        <script>
            // get select two working
           require(['jquery', 'pat-registry','mockup-patterns-select2'],
             function($, registry) {
               $(document).ready(function (){
                 registry.scan($('body'));
               });
           });
        </script>
    </head>
    <body id="plonebrowser" tal:define="form python:view.context;
        fieldid view/request/fieldid|nothing;
        adapted form/tinyform|nothing;
        fieldproperties adapted/getFieldProperties;
        field adapted/getField;
        fields form/getFormFields;
        dummy python: field is not None and view.request.RESPONSE.redirect(field.absolute_url() + '/edit?ajax_load=1&ajax_include_head=1');
        ">
        <div class="plone-modal-dialog">
            <div class="plone-modal-content">
                <div class="plone-modal-header">
                    <h2 class="plone-modal-title">Insert a Plomino Field</h2>
                </div>
                <div class="plone-modal-body">
                    <fieldset>
                        <legend>Add a new field</legend>
                        <a tal:attributes="href string: ../++add++PlominoField?ajax_load=1&ajax_include_head=1&form.widgets.IBasic.title=${fieldid}">New field</a>
                    </fieldset>
                    <br />
                    <fieldset>
                        <legend i18n:translate="plominofield_selection">Select an existing Plomino Field</legend>

                        <form id="fieldSelection" method="get" tal:attributes="action python: form.absolute_url() + '/tinyform/addField'">
                            <p>
                               <label for="plominoFieldId" i18n:translate="plominofield_id">Field ID</label>
                                <select id="plominoFieldId" name="fieldid">
                                    <option
                                        tal:repeat="item fields"
                                        tal:content="string: ${item/id} : ${item/Title}"
                                        tal:attributes="value item/id; selected python:item.id==fieldid"></option>
                                </select>
                            </p>
                            <div class="pattern-modal-buttons">
                                <input type="submit" id="insert" class="context" name="insert" value="Insert" i18n:attributes="value;" />
                                <input type="button" id="cancel" class="standalone" name="cancel" value="Cancel" i18n:attributes="value;" onclick="top.tinymce.activeEditor.windowManager.close();" />
                            </div>
                        </form>
                    </fieldset>
                    <div class="plone-modal-footer">
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>
